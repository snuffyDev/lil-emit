{
	"compilerOptions": {
		"target": "ES2022",
		"useDefineForClassFields": true,
		"module": "ES2020",
		"lib": ["ESNext", "ES2020", "ES2022", "DOM.Iterable", "DOM"],
		"moduleResolution": "Node",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"baseUrl": "./",
		"noEmit": true,
		"rootDir": "./",
		"declaration": true,
		"declarationDir": "dist",
		"isolatedModules": true,
		"esModuleInterop": true,
		"downlevelIteration": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true
	},
	"include": ["index.ts"],
	"exclude": ["node_modules"]
}
